{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2022",
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,
    "noEmit": true
  },
  "include": ["src/**/*", "**/*.test.ts", "**/*.test.tsx", "jest.setup.js"]
} 